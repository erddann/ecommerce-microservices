{
  "ConnectionStrings": {
    "StockDb": "Host=localhost;Port=5434;Database=stockdb;Username=stockuser;Password=stockpass"
  },
  "RabbitMq": {
    "HostName": "localhost",
    "Port": 5672
  },
  "Messaging": {
    "ExchangeName": "order.events.topic",
    "QueueName": "stock.ordercreated",
    "OrderCreatedRoutingKey": "OrderCreatedEvent",
    "DeadLetterExchange": "stock.dlq",
    "DeadLetterQueue": "stock.ordercreated.dlq",
    "DeadLetterRoutingKey": "stock.ordercreated.dlq",
    "MaxRetryAttempts": 3,
    "PrefetchCount": 1
  },
  "OutboxPublisher": {
    "ExchangeName": "stock.events.topic",
    "BatchSize": 50,
    "PollIntervalSeconds": 5
  },
  "Notification": {
    "EnableFailureAlerts": true,
    "Channel": "ops-alerts"
  }
}
